{% macro importantBanner(bannerHeadingStart, bannerLink, bannerHeadingEnd ) %}

  {% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

  {% set html %}
    <p class="govuk-notification-banner__heading">
      {{ bannerHeadingStart }}<a href="" class="govuk-link govuk-link--no-visited-state">{{ bannerLink }}</a>{{ bannerHeadingEnd }}
    </p>
  {% endset %}

  {{ govukNotificationBanner({
    html: html,
    classes: 'govuk-!-margin-bottom-3'
  }) }}

{% endmacro %}
