{% macro personalList(appealId, appealLink, linked, actionText, actionLink, dueBy, caseStatus, exampleData) %}

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Appeal ID</th>
      <th scope="col" class="govuk-table__header"></th>
      <th scope="col" class="govuk-table__header">Action required</th>
      <th scope="col" class="govuk-table__header">Due by</th>
      <th scope="col" class="govuk-table__header">Case status</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header"><a href="{{ appealLink }}">{{ appealId }}</a></th>
      <td class="govuk-table__cell">{% if linked %}<strong class="govuk-tag govuk-tag--grey">{{ linked }}{% endif %} </strong></td>
      <td class="govuk-table__cell"><a href="{{ actionLink }}">{{ actionText }}</a></td>
      <td class="govuk-table__cell">{{ dueBy }}</td>
      <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--green">{{ caseStatus }}</strong></td>
    </tr>

    {% if exampleData === "true" %}

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case.html?status=lpa-questionnaire">2110167</a></th>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--grey">Child</strong></td>
        <td class="govuk-table__cell"><a href="#">Review LPA Questionnaire</a></td>
        <td class="govuk-table__cell">{{ 2 | daysInFuture }}</td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--yellow">LPA questionnaire</strong></td>
      </tr>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case-closed.html">2936179</a></th>
        <td class="govuk-table__cell"></td>
        <td class="govuk-table__cell"><a href="#">Update Horizon reference</a></td>
        <td class="govuk-table__cell">{{ 3 | daysInFuture }}</td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--grey">Awaiting transfer</strong></td>
      </tr>

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case.html?status=statement-review">2110168</a></th>
        <td class="govuk-table__cell"></td>
        <td class="govuk-table__cell">Not received</td>
        <td class="govuk-table__cell">{{ 4 | daysInFuture }}</td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--blue">Statements</strong></td>
      </tr>

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case.html?status=statement-review">1234560</a></th>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--grey">Lead</strong></td>
        <td class="govuk-table__cell"><a href="#">Review IP comments/final comments</a></td>
        <td class="govuk-table__cell">{{ 11 | daysInFuture }}</td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--orange">Final comments</strong></td>
      </tr>

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case.html?status=site-visit">1234561</a></th>
        <td class="govuk-table__cell"></td>
        <td class="govuk-table__cell"><a href="#">Arrange site visit</a></td>
        <td class="govuk-table__cell">{{ 12 | daysInFuture }}</td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--red">Issue decision</strong></td>
      </tr>

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><a href="case.html?status=site-visit">1234561</a></th>
        <td class="govuk-table__cell"></td>
        <td class="govuk-table__cell"><a href="#">Review decision</a></td>
        <td class="govuk-table__cell"></td>
        <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--green">Complete</strong></td>
      </tr>

    {% endif %}

  </tbody>
</table>

{% endmacro %}
